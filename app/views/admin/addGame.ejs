<html>

<head>
    <!-- CSS only -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <!-- JavaScript Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
</head>

<body>
    <div class="container">
        <h1 class="text-center">Add games</h1>
        <form action="/newGame" method="post">
            <div class="form-group">
                <label for="nameGame">Game name</label>
                <input type="text" class="form-control" name="name" id="nameGame" aria-describedby="gameName" placeholder="Enter the game name">
                <!-- <small id="nameHelp" class="form-text text-muted">We'll never share your email with anyone
                    else.</small> -->
            </div>
            <div class="form-group">
                <label for="gameDescription">Game description</label>
                <input type="text" class="form-control" name="descrip" id="gameDescription" placeholder="game description">
            </div>
            <div class="form-group">
                <label for="gameImage">Game Image (src)</label>
                <input type="text" class="form-control" name="image" id="gameImage" placeholder="game image src">
            </div>
            <div class="form-group">
                <h5>Required games to play this one</h5>
                <% let game = gameList %>
                    <% for( let i = 0; i < game.length; i++ ) { %>
                        <input type="checkbox" id="vehicle1" name="requiredGames" value="<%= game[i]._id %>">
                        <label for="vehicle1"> <%= "id: " + game[i]._id + " name: " + game[i].name %> </label><br>
                        <% } %>
            </div>
            <div class="form-group">
                <!-- no se muy bien que son los levels -->
                <h5>Levels of this game</h5>
                <% let levels = levelList;%>
                    <% for( let i = 0; i < levels.length; i++ ) { %>
                        <input type="checkbox" id="vehicle1" name="levels" value="<%= levels[i]._id %>">
                        <label for="vehicle1"> <%= "id: " + levels[i]._id + " number level: " + levels[i].nLevel + "  gameInf: " + levels[i].gameInf%> </label><br>
                        <% } %>
            </div>
            <div class="d-flex justify-content-center">
                <button type="submit" class="btn btn-primary mt-3">Send</button>
            </div>
        </form>
    </div>
</body>

</html>