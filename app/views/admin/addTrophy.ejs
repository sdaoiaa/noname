<html>

<head>
	<!-- CSS only -->
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
		integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
	<!-- JavaScript Bundle with Popper -->
	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
		integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
		crossorigin="anonymous"></script>
</head>

<body>
	<div class="container">
		<h1 class="text-center mb-5">Add trophy</h1>
		<% let isError = error; %>
		<% if (isError) { %>
			<div class="alert alert-danger" role="alert">
				Error
			</div>
		<% } %> 
		<form action="/newTrophy" method="post">
			<label class="form-label" for="nameTrophy">Name: </label>
			<input type="text" name="nameTrophy" class="form-control" id="nameTrophy0">
			<label for="imageTrophy" class="form-label">Trophy image: </label>
			<input name="imageTrophy" type="text" class="form-control" id="imageTrophy0">
			<div class="form-group">
				<label for="trophyDescription">Description</label>
				<textarea class="form-control mt-2" id="trophyDescription" name="description"></textarea>
			</div>

			<div class="d-flex justify-content-center">
				<button type="submit" class="btn btn-primary mt-3">Send</button>
			</div>
		</form>
	</div>
</body>

</html>