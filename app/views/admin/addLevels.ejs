<html>

<head>
    <!-- CSS only -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <!-- JavaScript Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
        crossorigin="anonymous"></script>
</head>

<body>
    <div class="container">
        <h1 class="text-center mt-5">Add Level</h1>
        <% let isError=error; levels=levels %>
            <% if (isError) { %>
                <div class="alert alert-danger" role="alert">
                    Error
                </div>
                <% } %>
                    <form action="/newLevel" method="post">
                        <label for="nLevel">Number level</label>
                        <input class="form-control" type="number" id="nLevel" name="nLevel">
                        <label for="dif">Insert the difficulty</label>
                        <div class="form-group">
                            <div class="form-check">
                                <input type="radio" class="form-check-input" name="dif" id="radio1" value="easy">Easy
                                <label class="form-check-label" for="radio1"></label>
                            </div>
                            <div class="form-check">
                                <input type="radio" class="form-check-input" id="radio2" name="dif"
                                    value="normal">Normal
                                <label class="form-check-label" for="radio2"></label>
                            </div>
                            <div class="form-check">
                                <input type="radio" class="form-check-input" id="radio2" name="dif" value="hard">Hard
                                <label class="form-check-label" for="radio2"></label>
                            </div>
                            <div class="form-floating">
                                <textarea class="form-control" id="textAreaTheory" name="theory"></textarea>
                                <label for="textAreaTheory">Theory</label>
                            </div>
                            <p class="text-muted mb-2">Has de separar les repostes amb #, si n'hi poden haber diferents respostes.</p>
                            <div class="form-floating">
                                <textarea class="form-control mt-2" id="textAreaAnswer" name="answer"></textarea>
                                <label for="textAreaAnswer">Answer</label>
                            </div>
                            <div class="form-floating">
                                <textarea class="form-control mt-2" id="textGameInf" name="gameInf"></textarea>
                                <label for="textGameInf">Start game inf </label>
                            </div>
                            <h5>Required Levels</h5>
                            <% for (let i=0; i < levels.length; i++) { %>
                                <input type="checkbox" id="allLevels" name="levels" value="<%= levels[i]._id %>">
                                <label for="allLevels"><%= "id: " + levels[i]._id + " number level: " + levels[i].nLevel %></label><br>
                            <% } %>
                            <div class="d-flex justify-content-center form-floating">
                                <button type="submit" class="btn btn-primary mt-3">Send</button>
                            </div>
                        </div>
                    </form>
    </div>
</body>

</html>
